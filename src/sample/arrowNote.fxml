<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TabPane fx:id="textTab" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="text">
            <content>
              <AnchorPane>
                     <children>
                        <TextArea fx:id="textArea" />
                     </children>
              </AnchorPane>
            </content>
          </Tab>

          <Tab fx:id="arrowTab" text="Arrow Note">
            <content>
              <AnchorPane>
                     <children>
                        <TextArea fx:id="arrowNote" editable="false" />
                     </children>
              </AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="settings" text="settings">
              <content>
                <AnchorPane />
              </content>
            </Tab>

        </tabs>
      </TabPane>
   </children>
</VBox>
